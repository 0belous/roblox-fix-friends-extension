// ==UserScript==
// @name         Connections to Friends Fix
// @namespace    http://tampermonkey.net/
// @version      1.1
// @description  Replaces "Connections" with "Friends" in sidebar and search results
// @author       Bonk
// @match        *://*.roblox.com/*
// @grant        none
// ==/UserScript==

(function () {
    'use strict';

    function replaceText() {
        // Sidebar "Connect" ➝ "Friends"
        const sidebarItems = document.querySelectorAll('nav, aside, div, span');
        sidebarItems.forEach((el) => {
            if (el.textContent.trim() === "Connect") {
                el.textContent = "Friends";
            }
        });

        // Button: "Add Connection" ➝ "Add Friend"
        const buttons = document.querySelectorAll('button, a');
        buttons.forEach((btn) => {
            if (btn.textContent.trim() === "Add Connection") {
                btn.textContent = "Add Friend";
            }
        });
    }

    // Run initially
    replaceText();

    // Run repeatedly in case of dynamic content
    const observer = new MutationObserver(replaceText);
    observer.observe(document.body, { childList: true, subtree: true });
})();

